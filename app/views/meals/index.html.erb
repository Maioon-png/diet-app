<div class="contents_meal-index">

   <div class="record-icon">
    <%= link_to new_meal_path do %>
      <i class="fas fa-hamburger fa-2x"></i>
    <% end %>
  </div>

  <div class="meals">
    <% @meals.each do |meal| %>
      <div class="meal">
        <div class="morning">
          <p><%= meal.morning %></p>
        </div>
        <div class="lunch">
          <p><%= meal.lunch %></p>
        </div>
        <div class="dinner">
          <p><%= meal.dinner %></p>
        </div>
        <div class="other">
          <p><%= meal.other %></p>
        </div>
      </div>
      <div class="date">
        <p><%= meal.recorded_date.strftime('%Y-%m-%d') %></p>
      </div>  
      <div class="edit">
        <%= link_to '編集', edit_meal_path(id: meal.id) %>
        <%= link_to '削除', meal_path(id: meal.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
      </div>
    <% end %>

  </div>
</div>
